<body>

    <!-- Google Login -->
    <div id="login-page">
        <button id="login-btn">Login with Google</button>
    </div>

    <!-- Home Page -->
    <div id="home-page" style="display:none;">
        <header>
            <h1>NS NOTES</h1>
            <input type="text" id="search" placeholder="Search notes by title...">
        </header>

        <div class="notes-container" id="notes-container">
            <!-- Notes will be added dynamically -->
        </div>

        <!-- Floating Add Button -->
        <button id="add-note-btn">+</button>
    </div>

    <!-- Note Editor -->
    <div id="note-editor">
        <header>
            <button class="btn" id="back-btn">← Back</button>
            <button class="btn" id="save-note-btn">Save</button>
        </header>

        <input type="text" id="note-title" placeholder="Note Title">
        <textarea id="note-text" placeholder="Write your note here..."></textarea>
    </div>

    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js"></script>

    <script>
        // Your Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyC4DsH2v6bhuh8rixt9vXlEJIYjfXZJbmI",
            authDomain: "ns-notes-8af55.firebaseapp.com",
            projectId: "ns-notes-8af55",
            storageBucket: "ns-notes-8af55.appspot.com",
            messagingSenderId: "797399135887",
            appId: "1:797399135887:web:d56629144d09ba08cf62fa",
            measurementId: "G-VNFCBWBB5C"
        };

        // Initialize Firebase
        const app = firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const firestore = firebase.firestore();

        // Login with Google Button
        const loginBtn = document.getElementById('login-btn');
        const loginPage = document.getElementById('login-page');
        const homePage = document.getElementById('home-page');
        const notesContainer = document.getElementById('notes-container');
        let currentUser = null;

        loginBtn.addEventListener('click', () => {
            const provider = new firebase.auth.GoogleAuthProvider();
            auth.signInWithPopup(provider).then((result) => {
                currentUser = result.user;
                loginPage.style.display = 'none';
                homePage.style.display = 'block';
                loadNotes();
            }).catch((error) => {
                console.error(error.message);
            });
        });

        // Load notes for the logged-in user
        function loadNotes() {
            const userNotesRef = firestore.collection('notes').doc(currentUser.uid).collection('userNotes');
            userNotesRef.get().then(snapshot => {
                notesContainer.innerHTML = '';
                snapshot.forEach(doc => {
                    const note = doc.data();
                    const noteElement = document.createElement('div');
                    noteElement.classList.add('note');
                    noteElement.innerHTML = `
                        <h3>${note.title}</h3>
                        <p>${note.content.slice(0, 100)}...</p>
                        <span class="delete" data-id="${doc.id}">✖</span>
                    `;
                    notesContainer.appendChild(noteElement);
                    noteElement.querySelector('.delete').addEventListener('click', () => {
                        deleteNote(doc.id);
                    });
                });
            });
        }

        // Save new note
        const addNoteBtn = document.getElementById('add-note-btn');
        const noteEditor = document.getElementById('note-editor');
        const noteTitle = document.getElementById('note-title');
        const noteText = document.getElementById('note-text');
        const saveNoteBtn = document.getElementById('save-note-btn');
        const backBtn = document.getElementById('back-btn');

        addNoteBtn.addEventListener('click', () => {
            noteEditor.style.display = 'flex';
            homePage.style.display = 'none';
        });

        saveNoteBtn.addEventListener('click', () => {
            const title = noteTitle.value.trim();
            const content = noteText.value.trim();
            if (title && content) {
                firestore.collection('notes').doc(currentUser.uid).collection('userNotes').add({
                    title: title,
                    content: content
                }).then(() => {
                    loadNotes();
                    noteEditor.style.display = 'none';
                    homePage.style.display = 'block';
                });
            }
        });

        backBtn.addEventListener('click', () => {
            noteEditor.style.display = 'none';
            homePage.style.display = 'block';
        });

        // Delete note
        function deleteNote(id) {
            firestore.collection('notes').doc(currentUser.uid).collection('userNotes').doc(id).delete().then(() => {
                loadNotes();
            });
        }
    </script>

</body>
</html>
