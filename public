            margin: 0;
        }
        #search {
            background: #2a2a2a;
            border: none;
            padding: 10px;
            color: white;
            border-radius: 8px;
            outline: none;
        }
        .notes-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            padding: 20px;
        }
        .note {
            background: #1e1e1e;
            padding: 15px;
            border-radius: 12px;
            position: relative;
            cursor: pointer;
        }
        .note .delete {
            position: absolute;
            top: 5px;
            right: 10px;
            cursor: pointer;
            color: #ff6600;
        }
        #add-note-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #ff6600;
